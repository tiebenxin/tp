<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_user_background"
        android:minWidth="95dp"
        android:orientation="vertical"
        android:padding="1dp">

        <RelativeLayout
            android:layout_width="92dp"
            android:layout_height="92dp">

            <com.example.haoyuban111.mubanapplication.ui.view.RoundImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/default_male"
                app:borderRadius="5dp"
                app:type="round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_trust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_trusted_users"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/manage_liststyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Hangzhou,China"
            android:textColor="@color/txt_gray_47"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />
    </LinearLayout>


</LinearLayout>