<resources>

    <style name="AppCompatBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/lrp_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/lrp_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="android:listDivider">@drawable/divider</item>

    </style>

    <style name="manage_textstyle">
        <item name="android:shadowColor">#800e0e0e</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="manage_liststyle">
        <item name="android:shadowColor">#1a303030</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
    </style>

    <!-- calendar style-->
    <style name="dateStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#B0B0B0</item>
    </style>

    <style name="CustomCalendarDialog">
        <item name="android:windowNoTitle">true</item>
        <!-- 设置title -->
        <item name="android:windowIsFloating">true</item>
        <!--设置了这一句便会有阴影效果-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 设置半透明 -->
        <!-- 设置window的边框为透明的 这样就可以实现向右滑动显示出底层的activity了 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置边框 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowEnterAnimation">@anim/window_enter</item>-->
        <!--<item name="android:windowExitAnimation">@anim/window_exit</item>-->
    </style>


    <style name="add_hosting_left">
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="add_hosting_right">
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="star_user_title">
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="dialogBackWhite" parent="@android:style/Theme.Panel">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogBackWhiteTransparency" parent="@android:style/Theme.Panel">
        <item name="android:windowBackground">@drawable/skin_back_white_transparency</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogBackDark" parent="@android:style/Theme.Panel">
        <item name="android:windowBackground">@drawable/skin_back_dark</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogBackDark2" parent="@android:style/Theme.Panel">
        <item name="android:windowBackground">@drawable/skin_back_dark2</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogBackTransparent" parent="@android:style/Theme.Panel">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/viewfrombottom</item>
        <item name="android:windowExitAnimation">@anim/viewtobottom</item>
    </style>


</resources>
